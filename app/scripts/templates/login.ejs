<h1>Sign in</h1>
<div id="status">
    </div>
<form class="login-form" method="post">
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" id="username"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        <div class="input-icon">
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" id="password"/>
        </div>
    </div>
    <div class="form-actions">
        <button id="sign_in" type="submit" class="btn green pull-right">
        Login</button>
    </div>
</form>
<h1>Register Today</h1>
<div id="main">
    <div id="fb-root"></div>
    <h2>Log in with Facebook</h2>
    <button id="fb_button">Facebook login</button>
    <fb:login-button id="fbb" scope="public_profile,email">
    </fb:login-button>

<form class="login-form" method="post">
    <h3 class="form-title">Create to your account</h3>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" id="username"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Email</label>
        <div class="input-icon">
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" id="email"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Phone Number</label>
        <div class="input-icon">
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Phone Number" name="phone" id="phone"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" id="password"/>
        </div>
    </div>
    <div class="form-actions">
        <button id="register_new_account" type="submit" class="btn green pull-right">Sign up</button>
    </div>
</form>
<button id="log_out">Log out</button>

